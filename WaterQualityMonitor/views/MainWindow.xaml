<Window x:Class="WaterQualityMonitor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Water Quality Monitor" Height="300" Width="500">
    <Grid>
        <StackPanel>
            <TextBlock Text="pH:"/>
            <TextBlock Text="{Binding SensorData.PH}" />
            <TextBlock Text="Cl:"/>
            <TextBlock Text="{Binding SensorData.Cl}" />
            <TextBlock Text="Tu:"/>
            <TextBlock Text="{Binding SensorData.Tu}" />
            <TextBlock Text="EC:"/>
            <TextBlock Text="{Binding SensorData.EC}" />
        </StackPanel>
    </Grid>
</Window>