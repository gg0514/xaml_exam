<Window x:Class="hello_behind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hello_behind"
        mc:Ignorable="d"
        Title="Data Binding Example" Height="200" Width="300">
    <StackPanel>
        <TextBox Name="MyTextBox" Text="{Binding TextValue, UpdateSourceTrigger=PropertyChanged}" />
        <Button Content="Change Text" Click="OnButtonClick" />
    </StackPanel>
</Window>

